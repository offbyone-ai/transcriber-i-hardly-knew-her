{
  "name": "server",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "bun build --compile --minify --sourcemap --bytecode --outfile transcriber ./src/index.ts",
    "build:types": "tsc",
    "dev": "PORT=3847 bun --watch run src/index.ts",
    "start": "./transcriber",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio",
    "check-whisper": "bun run -e \"import('./src/transcription').then(t => t.checkWhisperAvailability('base.en'))\""
  },
  "dependencies": {
    "@better-auth/passkey": "^1.4.10",
    "better-auth": "^1.4.9",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.10.8",
    "resend": "^6.6.0",
    "shared": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.8"
  }
}
