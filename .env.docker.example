# Docker Environment Configuration
# Copy this file to .env.docker for production deployment

# Better-auth Configuration
# Generate a secure secret with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-min-32-chars-change-in-production

# Public URL where the app will be accessible
BETTER_AUTH_URL=http://localhost:3000

# Server Configuration
NODE_ENV=production
PORT=3000

# Database (SQLite - managed by volume in docker-compose)
DATABASE_PATH=/app/data/auth.db
