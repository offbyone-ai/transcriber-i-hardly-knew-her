# Staging Environment Configuration
NODE_ENV=staging
PORT=3000

# Authentication
BETTER_AUTH_SECRET=staging-secret-key-change-me
BETTER_AUTH_URL=https://staging.yourdomain.com

# Email Configuration (Resend)
RESEND_API_KEY=re_your_staging_api_key
FROM_EMAIL=noreply@yourdomain.com

# Database Configuration
DATABASE_PATH=/app/data/auth.db

# Build Configuration
VITE_SERVER_URL=https://staging.yourdomain.com

# Resource Limits
CPU_LIMIT=0.5
MEMORY_LIMIT=256M
CPU_RESERVATION=0.1
MEMORY_RESERVATION=64M

# Image Configuration
IMAGE_TAG=staging
COOLIFY_CONTAINER_NAME=transcriber-staging
