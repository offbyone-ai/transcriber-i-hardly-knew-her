# Server Configuration
NODE_ENV=production
PORT=3000

# Authentication
BETTER_AUTH_SECRET=your-secret-key-here-minimum-32-characters
BETTER_AUTH_URL=http://localhost:3000

# Database Configuration
# For local development: ./data/auth.db
# For Docker: /app/data/auth.db
# For production: /var/lib/transcriber/auth.db or cloud DB URL
DATABASE_PATH=/app/data/auth.db

# Build Configuration (for dev)
VITE_SERVER_URL=http://localhost:3000

# Resource Limits (Docker)
CPU_LIMIT=1.0
MEMORY_LIMIT=512M
CPU_RESERVATION=0.25
MEMORY_RESERVATION=128M

# Backup Configuration (optional)
ENABLE_BACKUP=false
BACKUP_RETENTION=7

# Image Configuration
IMAGE_TAG=latest
COOLIFY_CONTAINER_NAME=transcriber-app
