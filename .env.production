# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Authentication
BETTER_AUTH_SECRET=CHANGE_ME_PRODUCTION_SECRET
BETTER_AUTH_URL=https://yourdomain.com

# Database Configuration
DATABASE_PATH=/app/data/auth.db

# Build Configuration
VITE_SERVER_URL=https://yourdomain.com

# Resource Limits
CPU_LIMIT=2.0
MEMORY_LIMIT=1G
CPU_RESERVATION=0.5
MEMORY_RESERVATION=256M

# Backup Configuration
ENABLE_BACKUP=true
BACKUP_RETENTION=30

# Image Configuration
IMAGE_TAG=latest
COOLIFY_CONTAINER_NAME=transcriber-production
